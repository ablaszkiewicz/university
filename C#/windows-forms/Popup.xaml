<Window x:Class="windows_forms.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:windows_forms"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Label Margin="20,20,100,300">Name</Label>
        <TextBox x:Name="PathInputField" Margin="70,20,20,320"/>
        
        <RadioButton x:Name="RadioButtonFile" Margin="20,70,0,0">File</RadioButton>
        <RadioButton x:Name="RadioButtonDirectory" Margin="20,100,0,0">Directory</RadioButton>
        
        <CheckBox x:Name="CheckBoxR" Margin="200,70,0,0">ReadOnly</CheckBox>
        <CheckBox x:Name="CheckBoxA" Margin="200,100,0,0">Archive</CheckBox>
        <CheckBox x:Name="CheckBoxH" Margin="200,130,0,0">Hidden</CheckBox>
        <CheckBox x:Name="CheckBoxS" Margin="200,160,0,0">System</CheckBox>
        
        <Button x:Name="ButtonOk" Margin="20,250,200,50" Click="OkClicked">OK</Button>
        <Button x:Name="ButtonCancel" Margin="220,250,20,50" Click="CancelClicked">Cancel</Button>
    </Grid>
</Window>